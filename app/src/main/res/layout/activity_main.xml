<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Display Screen -->
    <LinearLayout
        android:id="@+id/displayLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/secondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24sp"
            android:gravity="end"
            android:textColor="#AAAAAA"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="48sp"
            android:gravity="end"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- GridLayout for Buttons -->
    <GridLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayLayout"
        android:layout_alignParentBottom="true"
        android:rowCount="7"
        android:columnCount="4"
        android:padding="8dp"
        android:background="#000000">

        <!-- First Row (Scientific Functions) -->
        <Button
            android:id="@+id/btn2nd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="2nd"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/btndeg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="deg"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/btnSin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="sin"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/btnCos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="cos"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <!-- Second Row (Scientific Functions) -->
        <Button
            android:id="@+id/btnTan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="tan"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/btnPuissance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="xⁿ"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/btnLg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="lg"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/btnIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="ln"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <!-- Third Row -->
        <Button
            android:id="@+id/BtnAllCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="AC"
            android:textColor="#FF5722"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/btnParentese"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="()"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/btnPercent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="%"
            android:textColor="#FF5722"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/BtnDivision"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="÷"
            android:textColor="#FF5722"
            android:backgroundTint="#1E1E1E" />

        <!-- Fourth Row -->
        <Button
            android:id="@+id/BtnSeven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="7"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/BtnEight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="8"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/BtnNine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="9"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/BtnMultiplication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="×"
            android:textColor="#FF5722"
            android:backgroundTint="#1E1E1E" />

        <!-- Fifth Row -->
        <Button
            android:id="@+id/BtnFour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="4"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/BtnFive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="5"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/BtnSix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="6"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/btnMinuss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="−"
            android:textColor="#FF5722"
            android:backgroundTint="#1E1E1E" />

        <!-- Sixth Row -->
        <Button
            android:id="@+id/BtnOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="1"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/BtnTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="2"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/BtnThree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="3"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/BtnPlus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="+"
            android:textColor="#FF5722"
            android:backgroundTint="#1E1E1E" />

        <!-- Seventh Row -->
        <Button
            android:id="@+id/BtnZero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="0"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/BtnPoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="."
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/BtnResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="="
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5722" />

        <Button
            android:id="@+id/BtnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="C"
            android:textColor="#FF5722"
            android:backgroundTint="#1E1E1E" />

    </GridLayout>

</RelativeLayout>
