        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:background="@drawable/rounded_button"
            android:elevation="10dp"
            android:id="@+id/BtnPercent"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รท"
            android:background="@drawable/rounded_button"
            android:elevation="10dp"
            android:id="@+id/BtnDivision"/>
        <Button
            android:layout_width="wrap_content"
